{% extends 'base.html.twig' %}

{% block title %}Index Ressources{% endblock %}

{% block body %}
    <h1 class="text-center text-primary display-4">Les ressources</h1>

    <a class="btn btn-primary btn-block" href="{{ path('info_new') }}"><i class="fas fa-plus-circle"></i></a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>Description</th>
                <th>Voir/Editer</th>
            </tr>
        </thead>
        <tbody>
        {% for info in infos %}
            <tr>
                <td>{{ info.id }}</td>
                <td><a href="{{ info.source }}">{{ info.subject }}</a></td>
                <td>{{ info.description }}</td>
                <td>
                    <div class="row">
                    <a class="btn btn-primary mx-1" href="{{ path('info_show', {'id': info.id}) }}"><i class="far fa-eye"></i></a>
                    <a class="btn btn-primary mx-1" href="{{ path('info_edit', {'id': info.id}) }}"><i class="fas fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">aucune ressource trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
