{% extends 'base.html.twig' %}

{% block title %} Ressource détaillée{% endblock %}

{% block body %}
    <h1 class="text-center text-primary display-4">Fiche détaillée de la ressource</h1>
    <div class="container d-flex justify-content-center">
        <div class="card w-75 border border-primary rounded shadow p-3 mb-5">
            <div class="card-body">
                <h5 class="card-title">{{ info.subject }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{ info.author }}</h6>
                <p class="card-text">{{ info.description }}</p>
                <p class="card-text">{{ info.moreabout }}</p>
                <p class="card-text">Mots-clés associés :
                    {% for keyword in info.keywords %}
                        {{ keyword.name }}
                    {% endfor %}
                </p>
                <a class="btn btn-primary" href="{{ info.source }}"><i class="fas fa-external-link-alt"></i></a>
                <p class="card-text"><small class="text-muted">Last updated {{ dateInt }}</small> </p>
            </div>
        </div>
    </div>

    <div class="container d-flex justify-content-center">
        <a  href="{{ path('info_index') }}">retour à la liste</a>
        <a class="btn btn-primary mx-1" href="{{ path('info_edit', {'id': info.id}) }}"><i class="fas fa-edit"></i></a>
        <a class="btn btn-primary mx-1">{{ include('info/_delete_form.html.twig') }}</a>
    </div>
{% endblock %}
