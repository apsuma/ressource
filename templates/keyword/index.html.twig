{% extends 'base.html.twig' %}

{% block title %}Keyword index{% endblock %}

{% block body %}
    <h1 class="text-center text-primary display-4">Liste des mots-cl√©s</h1>
    <a class="btn btn-primary btn-block" href="{{ path('keyword_new') }}"><i class="fas fa-plus-circle"></i></a>
    <div class="row">
        {% for keyword in keywords %}
            <div class="col-sm-2">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ keyword.name }}</h5>
                        <a class="btn btn-primary" href="{{ path('keyword_edit', {'id': keyword.id}) }}"><i class="fas fa-edit"></i></a>
                        <a class="btn btn-primary">{{ include('keyword/_delete_form.html.twig') }}</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
